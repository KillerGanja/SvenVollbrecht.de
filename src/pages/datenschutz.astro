---
import Layout from "../layouts/Layout.astro";
import * as entry from "../../content/pages/privacy.de.md";

const { frontmatter, Content } = entry;
---

<Layout title={frontmatter.title}>
    <div class="datenschutz-content">
        <h1 class="text-[1.25rem] font-bold text-gray-900 mb-4 lg:mb-6">
            {frontmatter.title}
        </h1>
        <Content />
    </div>
</Layout>

<style>
    .datenschutz-content :global(p) {
        margin-bottom: 0.75rem;
    }
</style>
