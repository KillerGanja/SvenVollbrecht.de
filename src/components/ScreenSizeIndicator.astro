---
// Only show in development mode
if (import.meta.env.PROD) {
    return;
}
---

<div
    class="fixed bottom-5 left-5 z-50 flex items-center gap-x-2 rounded-full bg-gray-900/90 px-3 py-1.5 font-mono text-xs font-semibold text-white shadow-lg backdrop-blur-sm ring-1 ring-white/10 pointer-events-none"
>
    <div class="flex items-center gap-x-2">
        <span class="sm:hidden">XS</span>
        <span class="hidden sm:inline md:hidden">SM</span>
        <span class="hidden md:inline lg:hidden">MD</span>
        <span class="hidden lg:inline xl:hidden">LG</span>
        <span class="hidden xl:inline 2xl:hidden">XL</span>
        <span class="hidden 2xl:inline">2XL</span>
    </div>
    <div class="h-4 w-px bg-white/20"></div>
    <span id="screen-width">...</span>
</div>

<script>
    function updateWidth() {
        const widthElement = document.getElementById("screen-width");
        if (widthElement) {
            widthElement.textContent = window.innerWidth + "px";
        }
    }

    window.addEventListener("resize", updateWidth);
    // Update on load
    updateWidth();
</script>
