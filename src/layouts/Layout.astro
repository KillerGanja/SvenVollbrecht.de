---
import "../styles/global.css";
import Header from "../components/Header.astro";
import ScreenSizeIndicator from "../components/ScreenSizeIndicator.astro";

interface Props {
  title?: string;
  lang?: string;
}

const { title = "Sven Vollbrecht", lang = "de" } = Astro.props;
---

<style>
  html {
    scrollbar-gutter: stable;
  }
</style>

<html lang={lang}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="flex min-h-screen flex-col bg-white text-gray-900 antialiased">
    <ScreenSizeIndicator />
    <Header />

    <main
      class="mx-auto w-full max-w-screen-2xl flex-grow px-4 py-10 sm:px-8 lg:px-16"
    >
      <slot />
    </main>

    <footer
      class="sticky bottom-0 z-40 border-t border-gray-100 bg-white/90 py-6 text-sm text-gray-500 backdrop-blur-md"
    >
      <div
        class="mx-auto grid max-w-screen-2xl grid-cols-1 gap-4 px-4 sm:grid-cols-3 sm:px-8 lg:px-16"
      >
        <!-- Linker Bereich (leer fÃ¼r Zentrierung der Mitte) -->
        <div class="hidden sm:block"></div>

        <!-- Mitte: Copyright -->
        <div class="text-center">
          &copy; {new Date().getFullYear()} Sven Vollbrecht
        </div>

        <!-- Rechts: Links -->
        <div class="flex justify-center gap-6 sm:justify-end">
          <a href="/impressum" class="transition-colors hover:text-gray-900"
            >Impressum</a
          >
          <a href="/datenschutz" class="transition-colors hover:text-gray-900"
            >Datenschutz</a
          >
        </div>
      </div>
    </footer>
  </body>
</html>
